# Hospital Analytics Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Streamlit Configuration
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# Database Configuration (if using PostgreSQL)
POSTGRES_DB=hospital_analytics
POSTGRES_USER=analytics_user
POSTGRES_PASSWORD=analytics_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (if using caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Data Paths
DATA_DIR=/app/data
EXPORTS_DIR=/app/exports
LOGS_DIR=/app/logs

# Analysis Configuration
DEFAULT_PREDICTION_DAYS=30
BUSY_PERIOD_THRESHOLD_PERCENTILE=75
MAX_CHART_POINTS=10000

# Security Settings
ANALYTICS_SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Settings
PANDAS_MAX_ROWS=50000
PLOTLY_MAX_POINTS=5000
CACHE_TTL=3600

